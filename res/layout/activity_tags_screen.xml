<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >
    
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10.59"
        android:background="@color/white"
        android:orientation="horizontal" >
        
        <!-- Separation1 -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical" >
        </LinearLayout>           
        
        <!-- menu button -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:onClick="onClickTagMenu"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/tag_menu_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_menu_button" 
                android:background="@drawable/icon_bg"/>
        </LinearLayout>       
        
        <!-- logo -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_waldo_logo" />
        </LinearLayout>           
        
        <!-- add button -->
        <LinearLayout
            android:id="@+id/tag_search_button_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="right|center"
            android:onClick="onClickAdd"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/tag_search_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_button"
                android:background="@drawable/icon_bg" />
        </LinearLayout>
        
                <!-- Separation2 -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical" >
        </LinearLayout> 
    </LinearLayout>  
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="89.74"
        android:background="@drawable/bcg_screen_color"
        android:orientation="vertical"
        android:weightSum="100">
        
         <!--  Text box(where are you?) -->
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="50"
            android:gravity="center|left"
            android:orientation="vertical"
    	    android:background="@color/transparent"> 
		     <TextView
		       	android:layout_weight="8"     
		        android:layout_height="0px"
		        android:layout_width="match_parent"
		        android:gravity="center"
		        android:text="Where Are You?"
		        android:textStyle="bold"
		        android:textSize="22sp"
		        android:textColor="@color/black"/>
          </LinearLayout> 

         	<!-- Tags list -->
            <LinearLayout
           	 android:layout_width="match_parent"
           	 android:layout_height="400dp"
           	 android:layout_weight="50"
           	 android:gravity="center|left"
           	 android:orientation="vertical"
           	 android:background="@color/transparent" >  
				<ListView
				android:id="@+id/mainTagContainer"
		    	android:layout_width="match_parent"
				android:layout_height="match_parent"
		    	android:orientation="vertical"
		    	android:cacheColorHint="@color/soft_white"
		    	android:listSelector="@color/transparent"
		    	android:background="@color/transparent" 
				android:divider="@color/transparent"
		    	android:dividerHeight="5dp">
				</ListView> 	     	
	         </LinearLayout>        
    </LinearLayout>
</LinearLayout>
