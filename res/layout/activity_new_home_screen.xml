<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >
    
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10.59"
        android:background="@color/white"
        android:orientation="horizontal" >
        
        <!-- Separation1 -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical" >
        </LinearLayout>           
        
        
        <!-- menu button -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:onClick="onClickMenu"
            android:orientation="vertical" 
            android:gravity="center_vertical">
            <ImageView
                android:duplicateParentState="true"
                android:id="@+id/menu_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_menu_button"
                android:background="@drawable/icon_bg" />
        </LinearLayout>       
        
        <!-- logo -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_waldo_logo" />
        </LinearLayout>           
        
        <!-- search button -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="right|center"
            android:onClick="onClickSearch"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/search_button"
                android:duplicateParentState="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_bg"
                android:src="@drawable/ic_search_button" />
        </LinearLayout>
        
                <!-- Separation2 -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:orientation="vertical" >
        </LinearLayout> 
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="89.74"
        android:background="@drawable/bcg_screen_color"
        android:gravity="center|bottom"
        android:orientation="horizontal" >
        
  
    <ListView
		android:id="@+id/mainContainer"
    	android:layout_width="330dp"
		android:layout_height="540dp"
    	android:orientation="vertical"
    	android:cacheColorHint="@color/soft_white"
    	android:listSelector="@color/transparent"
    	android:background="@color/transparent" 
		android:divider="@color/transparent"
    	android:dividerHeight="5dp">
	</ListView>  	
    </LinearLayout>
</LinearLayout>